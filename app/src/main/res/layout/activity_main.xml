<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bj.calendarwork1.MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="90px"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/TopBar"
        android:background="#FFFFFF">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="85px"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:id="@+id/MonthYearBlock">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="7"
                android:id="@+id/Month"
                android:textStyle="bold"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:textSize="50px"
                android:textColor="#000000" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="2016"
                android:id="@+id/Year"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:textColor="#000000"
                android:textSize="20px"
                android:textIsSelectable="false" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1px"
            android:id="@+id/TopBarBorder"
            android:background="#000000"
            android:layout_alignParentBottom="true"
            android:layout_alignParentStart="true"></RelativeLayout>

        <ImageView
            android:layout_width="60px"
            android:layout_height="40px"
            android:id="@+id/imageView"
            android:src="@drawable/arrow_right"
            android:layout_centerVertical="true"
            android:layout_alignParentEnd="true" />

        <ImageView
            android:layout_width="60px"
            android:layout_height="40px"
            android:id="@+id/imageView2"
            android:src="@drawable/arrow_left"
            android:layout_alignTop="@+id/imageView"
            android:layout_alignParentStart="true" />

    </RelativeLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/TopBar"
        android:layout_alignParentStart="true"
        android:background="#A0A0A0"
        android:id="@+id/Calendar">

        <TableRow
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/CalendarRowDefault">

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Sunday"
                android:background="#FF0000"></RelativeLayout>

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Monday" />

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Tuesday" />

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Wednesday" />

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Thursday" />

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Friday" />

            <RelativeLayout
                android:layout_width="60px"
                android:layout_height="60px"
                android:id="@+id/Saturday" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/CalendarRow1">

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock1">

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/Border"></RelativeLayout>
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock2" >

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/relativeLayout11" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock3" >

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/relativeLayout9" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock4" >

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/relativeLayout7" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock5" >

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/relativeLayout5" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock6" >

                <RelativeLayout
                    android:layout_width="1px"
                    android:layout_height="match_parent"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:background="#000000"
                    android:id="@+id/relativeLayout3" />
            </RelativeLayout>

            <RelativeLayout
                android:layout_width="100px"
                android:layout_height="100px"
                android:background="#FFFFFF"
                android:id="@+id/DayBlock7" >

            </RelativeLayout>

        </TableRow>
    </TableLayout>

</RelativeLayout>
